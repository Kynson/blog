---
interface Props {
  theme: 'one-dark-pro' | 'github-light',
  lang: BuiltinLanguages,
  code: string,
}

import highlighter from '../scripts/shikiji';

const { theme, lang, code } = Astro.props;

const html = highlighter.codeToHtml(code, { theme, lang });
---

<Fragment set:html={html}></Fragment>